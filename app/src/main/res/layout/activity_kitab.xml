<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KitabActivity">

    <RelativeLayout
        android:id="@+id/lineKitab1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/imageKitab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/library"
            android:layout_marginLeft="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/imageKitab"
            android:text="DAFTAR KITAB KELAS"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewKelasKitab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lineKitab1"
        android:layout_margin="30dp"/>


</RelativeLayout>